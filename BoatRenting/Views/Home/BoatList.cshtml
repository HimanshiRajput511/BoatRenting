@model IEnumerable<ModelLayer.BoatRegister>

@{
    ViewData["Title"] = "BoatList";
}

<h1>BoatList</h1>

<p>
    <a asp-action="BoatRegister">Register Boat</a>
</p>
<div class="toast">
    <div class="toast-body">
        @if (ViewBag.Message != null)
        {
            @ViewBag.Message
        }
        else
        {
            <p>Error</p>
        }
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BoatName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HourlyRate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BoatNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRented)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsReturned)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BoatName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HourlyRate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BoatNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsRented)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsReturned)
                </td>
                <td>
                    @Html.ActionLink("Delete", "DeleteBoat", new {  id=item.BoatId  })
                </td>
            </tr>
        }
    </tbody>
</table>

